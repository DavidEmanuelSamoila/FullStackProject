<!DOCTYPE html>
<html>
    <head>
        <title><%= user.company %> - <%= user.username %></title>
        <link rel="stylesheet" href="../css/session-style.css">
    </head>
    <body>
        <header>
            <div>
                <h1><a href="/profile"><%= user.company %></a></h1>
                <h2>Welcome, <%= user.username %></h2>
            </div>
            <nav>
                <span class="dropdown">
                    <button class="dropbtn">Information</button>
                    <div class="dropdown-content">
                        <a href="/profile/clinfo">Client Information</a>
                        <a href="/profile/maninfo">Manufacturer Information</a>
                        <% if (user.level > 0) { %>
                            <a href="/profile/empinfo">Employee Information</a>
                        <% } %>
                    </div>
                </span>
                <% if (user.level > 0) { %>
                    <a href="/profile/sales">Sales</a>
                    <a href="/profile/pricing">Pricing</a>
                <% } %>
                <a href="/profile/inventory">Inventory</a>
                <a href="/profile/docs">Documents</a>
                <a href="/">Log Out</a>
            </nav>
        </header>

        <span id="text">
            <table>
                <tr>
                    <th>SKU</th>
                    <th>Manufacturer</th>
                    <th>Type of Product</th>
                    <th>Colour</th>
                    <th>Quantity in Stock</th>
                    <th>Cost per Unit</th>
                </tr>
                <% if (inventory.length === 0) { %>
                    <tr>
                        No Items Yet...
                    </tr>
                <% } else { %>
                    <% inventory.map((product)=> { %>
                        <tr>
                            <td><%=product.sku%></td>
                            <td><%=product.manufacturer%></td>
                            <td><%=product.top%></td>
                            <td><%=product.colour%></td>
                            <td><%=product.stock%></td>
                            <td><%=product.cpu%></td>
                        </tr>
                    <% }) %>
                <% } %>
            </table>
        </span>

        <footer>

        </footer>
    </body>
</html>